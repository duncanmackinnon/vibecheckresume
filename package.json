{
  "name": "vibecheckresume",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "deploy": "npm run build && gh-pages -d out",
    "lint": "next lint",
    "test": "jest",
    "analyze": "tsx scripts/analyze-project.ts",
    "analyze:full": "ANALYSIS_QUALITY=true npm run analyze",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "test:openai": "ts-node -r dotenv/config scripts/test-openai.ts",
    "test:errors": "ts-node -r dotenv/config scripts/test-errors.ts",
    "test:fixtures": "jest src/test/__tests__/",
    "test:components": "jest src/components/__tests__/",
    "test:api": "jest src/app/api/__tests__/",
    "test:lib": "jest src/app/lib/__tests__/",
    "test:scripts": "jest scripts/__tests__/",
    "test:all": "npm run test:ci && npm run test:errors && npm run test:openai",
    "coverage": "npm run test:ci && npm run coverage:report",
    "coverage:report": "ts-node scripts/generate-coverage.ts",
    "coverage:badges": "npx jest-coverage-badges",
    "coverage:open": "open coverage/lcov-report/index.html",
    "quality": "npm run quality:analyze && npm run quality:report",
    "quality:analyze": "ts-node scripts/analyze-test-quality.ts",
    "quality:report": "cat test-quality-report.txt",
    "quality:trend": "ts-node scripts/analyze-test-trends.ts",
    "quality:trend:week": "ts-node scripts/analyze-test-trends.ts 7",
    "quality:trend:month": "ts-node scripts/analyze-test-trends.ts 30",
    "quality:trend:quarter": "ts-node scripts/analyze-test-trends.ts 90",
    "quality:fix": "ts-node scripts/analyze-test-quality.ts --fix",
    "quality:history": "npm run quality:trend && npm run quality:report",
    "report:weekly": "ts-node scripts/generate-weekly-report.ts",
    "report:view": "cat $(ls -t reports/test-quality-*.txt | head -n1)",
    "report:latest": "npm run report:weekly && npm run report:view",
    "report:send": "npm run report:weekly -- --send",
    "report:email": "npm run report:weekly -- --email",
    "report:slack": "npm run report:weekly -- --slack",
    "report:all": "npm run report:weekly -- --send --email --slack",
    "report:archive": "tar -czf reports/archive-$(date +%Y%m).tar.gz reports/test-quality-*.{txt,json}",
    "test:changed": "ts-node scripts/run-targeted-tests.ts",
    "test:staged": "ts-node scripts/run-targeted-tests.ts $(git diff --cached --name-only)",
    "verify:env": "ts-node -r dotenv/config scripts/verify.ts",
    "verify:tests": "npm run test:ci && npm run test:all",
    "verify:quality": "npm run quality:analyze && node -e \"process.exit(require('./test-quality-report.json').score < 80 ? 1 : 0)\"",
    "verify:trends": "npm run quality:trend:week && node -e \"process.exit(require('./test-trends-analysis.json').trends.coverage.direction === 'declining' ? 1 : 0)\"",
    "verify": "npm run lint && npm run verify:env && npm run verify:tests && npm run verify:quality && npm run verify:trends",
    "prepare": "husky",
    "precommit": "lint-staged && npm run test:staged",
    "prepush": "npm run verify",
    "prestart": "npm run verify:env",
    "prebuild": "npm run verify:env",
    "postinstall": "npm run build",
    "ci": "bash scripts/ci.sh",
    "ci:verify": "npm run verify:env && npm run lint && npx tsc --noEmit",
    "ci:test": "npm run test:ci && npm run test:all",
    "ci:quality": "npm run quality && npm run quality:trend:week",
    "ci:report": "npm run report:weekly",
    "ci:build": "npm run build",
    "clean": "rm -rf .next coverage node_modules/.cache",
    "clean:tests": "rm -rf coverage test-results test-quality-report.* test-trends-*",
    "clean:reports": "rm -rf reports/*.{txt,json}",
    "clean:all": "rm -rf .next coverage node_modules test-results reports",
    "reset": "npm run clean:all && npm install",
    "db:init": "ts-node scripts/init-db.ts",
    "db:reset": "ts-node scripts/init-db.ts --reset",
    "docker:build": "docker build -t vibecheckresume .",
    "docker:test": "docker-compose run test",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@tensorflow-models/universal-sentence-encoder": "^1.3.3",
    "@tensorflow/tfjs": "^4.22.0",
    "@types/node": "20.11.24",
    "@types/react": "18.2.61",
    "@types/react-dom": "18.2.19",
    "autoprefixer": "10.4.18",
    "axios": "^1.8.4",
    "buffer": "^6.0.3",
    "dotenv": "^16.4.5",
    "eslint-config-next": "14.1.1",
    "form-data": "^4.0.2",
    "next": "14.1.1",
    "openai": "^4.28.4",
    "pdf-parse": "^1.1.1",
    "pdfjs-dist": "^3.4.120",
    "postcss": "8.4.35",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-dropzone": "^14.2.3",
    "react-markdown": "^10.1.0",
    "tailwindcss": "3.4.1",
    "tesseract.js": "^6.0.0",
    "typescript": "5.3.3"
  },
  "devDependencies": {
    "@slack/webhook": "^7.0.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/pdf-parse": "^1.1.4",
    "eslint": "^8.57.1",
    "gh-pages": "^6.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-coverage-badges": "^1.1.2",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^15.2.2",
    "nodemailer": "^6.9.12",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "npm run test:changed"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run verify"
    }
  },
  "jest-junit": {
    "outputDirectory": "test-results",
    "outputName": "junit.xml",
    "classNameTemplate": "{filepath}",
    "titleTemplate": "{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": true
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/duncanmackinnon/vibecheckresume.git"
  },
  "bugs": {
    "url": "https://github.com/duncanmackinnon/vibecheckresume/issues"
  }
}
